{
  "name": "mf-template",
  "private": true,
  "version": "1.0.0",
  "description": "微前端子系统模板项目",
  "scripts": {
    "dev": "rsbuild dev --open",
    "build": "rsbuild build",
    "build:gh-pages": "NODE_ENV=production rsbuild build",
    "preview": "rsbuild preview",
    "deploy": "npm run build:gh-pages",
    "lint": "eslint src --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint src --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "type-check": "tsc --noEmit",
    "code-quality": "npm run lint && npm run format:check && npm run type-check",
    "prepare": "husky install"
  },
  "dependencies": {
    "@ant-design/charts": "^2.6.1",
    "@types/react-router-dom": "^5.3.3",
    "antd": "^5.26.7",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^7.7.1"
  },
  "devDependencies": {
    "@module-federation/rsbuild-plugin": "^0.17.1",
    "@rsbuild/core": "^1.2.15",
    "@rsbuild/plugin-react": "^1.1.1",
    "@types/react": "^18.3.11",
    "@types/react-dom": "~18.3.1",
    "typescript": "^5.7.2",
    "eslint": "^9.32.0",
    "@eslint/js": "^9.32.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.3.3",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css,scss}": [
      "prettier --write"
    ]
  }
}
